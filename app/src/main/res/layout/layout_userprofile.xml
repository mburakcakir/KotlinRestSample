<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar android:layout_width="match_parent"
                                       android:layout_height="0px" android:layout_weight="0.1">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
        >

            <RelativeLayout
                    android:layout_width="0px"
                    android:layout_height="match_parent" android:layout_weight="0.8" android:gravity="center|right"
                    android:layout_alignParentTop="true">

                <Button
                        android:layout_width="24dp"
                        android:layout_height="24dp" android:id="@+id/btnDelete"
                        android:background="@drawable/ic_delete"/>
            </RelativeLayout>
            <RelativeLayout
                    android:layout_width="0px"
                    android:layout_height="match_parent" android:layout_weight="0.2" android:gravity="center"
                    android:padding="2dp">

                <Button
                        android:layout_width="24dp"
                        android:layout_height="24dp" android:id="@+id/btnEdit"
                        android:background="@drawable/ic_edit"/>
            </RelativeLayout>
        </LinearLayout>


    </android.support.v7.widget.Toolbar>


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.9" android:orientation="vertical" android:background="#FFFFFF">
        <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="0dp" android:layout_weight="0.5" android:gravity="center"
        >

            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" app:srcCompat="@drawable/logo" android:id="@+id/imageView"/>
            <Button
                    android:layout_width="24dp"
                    android:layout_height="24dp" android:id="@+id/btnBrowse" android:layout_gravity="right"
                    android:background="@drawable/ic_search"
                    android:layout_marginRight="25dp" android:layout_marginLeft="10dp" android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"/>
        </FrameLayout>
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp" android:layout_weight="0.8" android:layout_marginTop="-50dp"
                android:layout_marginLeft="25dp" android:layout_marginRight="25dp">

            <include
                    android:id="@+id/toolbar"
                    layout="@layout/layout_useredit"></include>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>